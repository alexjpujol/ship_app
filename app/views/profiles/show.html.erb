
<%= @profile.fname %>
<%= @profile.lname %>

<%= image_tag @profile.avatar.url(:medium) %>


<div>
    <p>Update Your Info!</p>
    <%= form_for @profile, :url => profile_path, :html => { :multipart => true } do |f| %>
        <p><%= f.label :fname, "First Name" %></p> 
        <p><%= f.text_field :fname %></p>
        <p><%= f.label :lname, "Last Name" %></p> 
        <p><%= f.text_field :lname %></p>
        <p><%= f.file_field :avatar %></p>
        <p><%= f.submit("Submit") %></p>
    <% end %>
</div>
